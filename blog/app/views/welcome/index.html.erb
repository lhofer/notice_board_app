<h1>Notice Board</h1>

<h3>What's Trending</h3>

<table>
	<tr>
		<th>Title</th>
		<th>Likes</th>
		<th cospan="2"></th>
	</tr>
	<% @articles.each do |article| %>
		<tr>
			<td><%= article.title %></td>
			<td><%= article.likes.length %></td>
			<td><%=link_to 'Read Listing', article_path(article) %></td>
	<% end %>
</table>
<%= link_to 'See all listings', controller: 'articles' %>